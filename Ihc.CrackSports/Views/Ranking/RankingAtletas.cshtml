@using Ihc.CrackSports.Core.Objetos.Ranking;
@model RankingExibicao

@{
    Layout = "_Layout";
}

@section Styles{
    <link rel="stylesheet" href="~/css/RankingAtletas/rankingAtletas.css" />
}

<div class="container mt-5 mb-5">

    <h3 class="text-semi-bold-orange mt-5">Melhores Artilheiros</h3>
    <hr />

    <div class="filtros-ranking mt-5">

        <div class="g-width-10 d-inline-flex">

            <div class="form-outline ag-field-content g-width-10">
                <select id="cmbFiltrarRanking" onchange="onChangeFiltros(this)" class="form-select ag-field-input ag-input-color-light-full">
                    <option value="0" selected="">Selecionar</option>
                    <option value="1">Semanal</option>
                    <option value="2">Mensal</option>
                    <option value="3">Anual</option>
                </select>
                <label class="form-label text-semi-bold-light ag-field-label" for="cmbGrauParentesco">Filtrar por</label>
            </div>
        </div>
    </div>

    <div class="mt-5 col-lg-12 d-flex justify-content-center">

        @foreach (var obj in Model.AtletasRanking)
        {
            @if (obj.PosicaoRanking == 1)
            {
                <div class="col-lg-3 p-2 card-melhor-artilheiro card-ouro d-flex">

                    <strong class="mt-2 text-posicao"> 1º</strong>
                    <div class="mt-3" style="text-align-last: center;">
                        <img class="img-coroa" src="~/imgs/coroa-icon.png" />
                        <br />

                        <img class="img-artilheiro ms-2 mb-2" src="data:image/png;base64,@obj.ImagemBase64">

                        <br />

                        <div class="row mb-2">
                            <span style="color: #FA8C05;">@obj.Nome.ToUpper()</span>
                        </div>

                        <div class="row justify-content-center">
                            <span>Clube: </span> <a class="ms-2">@obj.NomeClube</a>
                        </div>

                        <div class="d-flex justify-content-center">
                            <span>Total de Gols: </span> <p class="ms-2">@obj.TotalGols</p>
                        </div>

                        <div class="row">
                            <span>Último jogo: </span><a> 01/03/2024</a>
                        </div>
                    </div>
                </div>
            }
            else if (obj.PosicaoRanking == 2)
            {
                <div class="col-lg-3 p-2 card-melhor-artilheiro card-prata d-flex a-ms-6">
                    <strong class="mt-2 text-posicao"> 2º</strong>
                    <div class="mt-3" style="text-align-last: center;">
                        <img class="img-coroa" src="~/imgs/coroa-icon.png" />
                        <br />
                        <img class="img-artilheiro ms-2 mb-2" src="data:image/png;base64,@obj.ImagemBase64">

                        <br />

                        <div class="row mb-2">
                            <span style="color: #FA8C05;">@obj.Nome.ToUpper()</span>
                        </div>

                        <div class="row justify-content-center">
                            <span>Clube: </span> <a class="ms-2">@obj.NomeClube</a>
                        </div>

                        <div class="d-flex justify-content-center">
                            <span>Total de Gols: </span> <p class="ms-2">@obj.TotalGols</p>
                        </div>

                        <div class="row">
                            <span>Último jogo: </span><a> 01/03/2024</a>
                        </div>
                    </div>
                </div>
            }
            else if (obj.PosicaoRanking == 3)
            {
                <div class="col-lg-3 p-2 card-melhor-artilheiro card-bronze d-flex a-ms-6">
                    <strong class="mt-2 text-posicao"> 3º</strong>
                    <div class="mt-3" style="text-align-last: center;">
                        <img class="img-coroa" src="~/imgs/coroa-icon.png" />
                        <br />
                        <img class="img-artilheiro ms-2 mb-2" src="data:image/png;base64,@obj.ImagemBase64">

                        <br />

                        <div class="row mb-2">
                            <span style="color: #FA8C05;">@obj.Nome.ToUpper()</span>
                        </div>

                        <div class="row justify-content-center">
                            <span>Clube: </span> <a class="ms-2">@obj.NomeClube</a>
                        </div>

                        <div class="d-flex justify-content-center">
                            <span>Total de Gols: </span> <p class="ms-2">@obj.TotalGols</p>
                        </div>

                        <div class="row">
                            <span>Último jogo: </span><a> 01/03/2024</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>


@section Scripts{
    <script src="~/js/Rankings/rankingAtletas.js"></script>
}