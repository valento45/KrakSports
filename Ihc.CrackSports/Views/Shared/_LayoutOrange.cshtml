@using Ihc.CrackSports.Core.Authorization.Claims;
@using System.Security.Claims;
<!DOCTYPE html>
<html lang="pt-br" class="fundo-login">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ihc.CrackSports</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/validacoes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ihc.CrackSports.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" />

    <style>
        .fundo-login {
            background-color: #D9740D !important;
            color: ghostwhite;
        }

            .fundo-login a {
                color: ghostwhite;
            }

            .fundo-login label {
                color: ghostwhite;
            }

        .top-form-login {
            margin-top: 180px !important;
        }

        .link-redirection-simple {
            text-decoration: none;
        }
    </style>
</head>
<body class="fundo-login">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-lightbox-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Krak Sports</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Clubes">Clubes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Inscrições</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Sobre">Sobre nós</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="nav-right">
                                @if (User?.CanAccess(Roles.ALUNO) ?? false)
                                {
                                    <div class="d-inline-flex">

                                        <a class="nav-link " href="#" onclick="redirectMinhaConta()">
                                            <img class="img-icon-nav mx-2" src="~/imgs/login-white.png" />
                                            Minha conta
                                        </a>

                                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Logout">
                                            <img class="img-icon-nav mx-2" src="~/imgs/Exit_house.png" />
                                            Sair
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Login">
                                        <img class="img-icon-nav mx-2" src="~/imgs/login-white.png" />
                                        Login
                                    </a>
                                }

                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 &nbsp; Krak Sports - Associação de clubs de futebol - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="link-redirect-orange">Políticas de privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/UtilAjax.js" asp-append-version="true"></script>
    <script src="~/js/Usuario/Usuario.js" asp-append-version="true"></script>
    <script src="~/lib/jquery.mask/jquery.mask.min.js" asp-append-version="true"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    <script>
        let _userLogado = +@User?.Claims.FirstOrDefault(p => p.Type == ClaimTypes.NameIdentifier)?.Value;
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
